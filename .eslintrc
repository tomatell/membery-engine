{
    "rules": {
        "indent": [
            2,
            "tab"
        ],
        "quotes": [
            2,
            "single"
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "semi": [
            2,
            "always"
        ],
		"brace-style": [
			2,
			"1tbs",
			{ "allowSingleLine": true }
		],
		"no-mixed-spaces-and-tabs": 2,
		"space-after-function-name": [2, "never"],
		"no-spaced-func": 2,
		"space-before-blocks": [2, "always"]
    },
    "env": {
        "es6": true,
        "node": true,
        "browser": true
    }
}
